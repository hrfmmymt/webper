{# ./index.njk #}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <style>
    * {
      box-sizing: border-box;
    }

    html,
    body {
      padding: 0;
      margin: 0;
      width: 100%;
      height: 100%;
    }

    html {
      font-size: calc(1em + .5vw);
    }

    body {
      background-color: #fafbfc;
      font-family: -apple-system, BlinkMacSystemFont, Roboto, Arial, Helvetica, sans-serif;
    }

    main {
      padding: 2%;
    }

    h1 {
      margin-top: 0;
    }

    .input {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 30vh;
      background-color: #fff;
      border: 3px dashed #ccc;
      cursor: pointer;
    }

    .input input {
      display: none;
      font-size: 2rem;
      cursor: pointer;
    }

    .input input::-webkit-file-upload-button {
      display: none;
    }

    .output {
      width: 100%;
      background-color: #fff;
      padding: 1%;
      margin-top: 5%;
      border: 1px solid #ccc;
    }

    .before-after {
      display: flex;
    }

    .before-after.vertical {
      display: block;
    }

    dl,
    dd {
      margin: 0;
    }

    dt {
      margin-bottom: .5em;
    }

    .before {
      margin: 0 1rem 1rem 0;
    }

    .before-after.vertical .before {
      margin-right: 0;
    }

    .hide {
      display: none;
    }
  </style>
</head>
<body>
  <main>
    <h1>{{ title }}</h1>
    <div id="dropArea" class="input">
      <label for="imageInput">
          put image file here.
          <input id="imageInput" class="input-file" type="file" accept=".jpg,.png,image/jpeg,image/png">
        </label>
    </div>
    <section class="output hide" id="outputArea">
      <h2>output</h2>
      <button type="button" id="btnAppearance">vertical</button>
      <div class="before-after" id="beforeAfter">
        <dl class="before">
          <dt id="titleBefore">before</dt>
          <dd>
            <a id="downloadBefore">
                <img id="imageBefore" width="100%">
              </a>
          </dd>
        </dl>
        <dl class="after">
          <dt id="titleAfter">after</dt>
          <dd>
            <div id="loader">loading...</div>
            <a id="downloadAfter">
                <img id="imageAfter" width="100%">
              </a>
          </dd>
        </dl>
      </div>
    </section>
  </main>
  <script src="/js/bundle.js"></script>
</body>
</html>