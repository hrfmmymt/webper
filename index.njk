{# ./index.njk #}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <style>
    * {
      box-sizing: border-box;
    }

    html,
    body {
      padding: 0px;
      margin: 0px;
      width: 100%;
      height: 100%;
    }

    html {
      font-size: calc(1em + .5vw);
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, Roboto, Arial, Helvetica, sans-serif;
    }

    .output {
      width: 100%;
    }

    .output img {
      max-width: 1000px;
    }

    .hide {
      display: none;
    }

    .input {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 300px;
      border: 5px dashed #ccc;
      cursor: pointer;
    }

    .input input {
      display: none;
      font-size: 2rem;
      cursor: pointer;
    }

    .input input::-webkit-file-upload-button {
      display: none;
    }
  </style>
</head>
<body>
  <main>
    <h1>{{ title }}</h1>
    <div id="dropArea" class="input">
      <label for="imageInput">
          Drag & drop or Click to select a image file!
          <input id="imageInput" class="input-file" type="file" accept=".jpg,.png,image/jpeg,image/png">
        </label>
    </div>
    <section class="output hide" id="outputArea">
      <h2>output</h2>
      <dl class="before">
        <dt>before</dt>
        <dd>
          <a id="downloadBefore">
              <img id="imageBefore">
            </a>
        </dd>
      </dl>
      <dl class="after">
        <dt>after</dt>
        <dd>
          <a id="downloadAfter">
              <img id="imageAfter">
            </a>
        </dd>
      </dl>
    </section>
  </main>
  <script src="/js/bundle.js"></script>
</body>
</html>